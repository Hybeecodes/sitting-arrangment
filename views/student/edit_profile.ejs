<!DOCTYPE html>
<html lang="en">

<% include ./partials/head %>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <% include ./partials/nav_mobile %>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <% include ./partials/sidebar %>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <% include ./partials/nav %>
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                        </div>
                        <div class="container">
                            <div class="col-lg-12">
                                    <h2 class="title-1 m-b-25">Edit My Profile</h2>
                                    <div class="au-card au-card--bg-red au-card-top-countries m-b-40">
                                        <div class="au-card-inner">
                                            <form action="" id="profileForm">
                                                <div class="form-group">
                                                    <label for="firstname">Firstname</label>
                                                    <input type="text" name="firstname" id="firstname" class="form-control" value="<%= student.firstname %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="firstname">Lastname</label>
                                                    <input type="text" name="lastname" id="lastname" class="form-control" value="<%= student.lastname %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="gender">Firstname</label>
                                                    <select name="gender" id="gender" class="form-control">
                                                        <option value="male"
                                                        <% if(student.gender === 'male'){ %>selected <% } %>
                                                        >Male</option>
                                                        <option value="female"
                                                        <% if(student.gender === 'female'){ %>selected <% } %>
                                                        >Female</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="level">Level</label>
                                                    <select name="level" id="level" class="form-control">
                                                        <option value="100"
                                                        <% if(student.level === '100'){ %>selected <% } %>
                                                        >100</option>

                                                        <option value="200"
                                                        <% if(student.level === '200'){ %>selected <% } %>
                                                        >200</option>

                                                        <option value="300"
                                                        <% if(student.level === '300'){ %>selected <% } %>
                                                        >300</option>

                                                        <option value="400"
                                                        <% if(student.level === '400'){ %>selected <% } %>
                                                        >400</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="matric">Matric</label>
                                                    <input type="number" name="matric" id="matric" class="form-control" value="<%= student.matric %>">
                                                </div>
                                                <p>
                                                        <img id="barcode"/>
                                                </p>
                                                

                                                <button type="submit" class="btn btn-primary">Update Profile</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        </div>
                        <% include ./partials/footer %>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <% include ./partials/script %>
    <script>
        let matric = $('#matric').val();
        let barcode = JsBarcode("#barcode", matric);
        // or with jQuery
        // $("#barcode").JsBarcode(matric);
    </script>
</body>

</html>
<!-- end document-->
